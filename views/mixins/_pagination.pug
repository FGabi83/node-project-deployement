mixin pagination(page, pages, count)
  .pagination 
    .pagination__prev
      if page > 1
        a(href=`/stores/page/1`) First  
    .pagination__prev
      if page > 1
        a(href=`/stores/page/${page - 1}`) #[strong Prev]
    .pagination__text 
      p Page #{page} of #{pages} - #{count} total results
    .pagination__next 
      if page < pages 
        a(href=`/stores/page/${parseFloat(page) + 1}`) #[strong Next]
    .pagination__next 
      if page < pages 
        a(href=`/stores/page/${pages}`) Last
      